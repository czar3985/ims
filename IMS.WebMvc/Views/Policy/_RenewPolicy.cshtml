@model IMS.WebMvc.Models.PolicyDetailModel

<div class="modal fade" id="renew-policy-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Renew Policy</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" action='@Url.Action("RenewPolicy")' method="post">
                    @Html.HiddenFor(m => Model.Id)
                    @Html.HiddenFor(m => Model.ClientId)
                    @Html.HiddenFor(m => Model.AgentId)
                    @Html.HiddenFor(m => Model.PolicyTypeId)
                    @Html.HiddenFor(m => Model.InsuranceProviderId)
                    <div class="form-group">
                        <label for="PolicyNumber" class="col-xs-3 control-label">New Policy No.</label>
                        <div class="col-xs-8 detail-value">
                            <input type="text" name="PolicyNumber" class="form-control" data-val="true" data-val-required="Policy Number is required" />
                            @Html.ValidationMessageFor(model => model.PolicyNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => Model.SumInsured, new { @class = "col-xs-3 control-label" })
                        <div class="col-xs-8 detail-value">
                            @Html.TextBoxFor(m => Model.SumInsured, new { @class = "form-control number" })
                            @Html.ValidationMessageFor(model => model.SumInsured, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => Model.ExpiryDate, new { @class = "col-xs-3 control-label" })
                        <div class="col-xs-8 detail-value">
                            <input name="ExpiryDate" type="text" class="form-control datepicker datepicker-dropdown" value='@Model.ExpiryDate.AddYears(1).ToString("MM/dd/yyyy")' />
                            @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => Model.Premium, new { @class = "col-xs-3 control-label" })
                        <div class="col-xs-8 detail-value">
                            @Html.TextBoxFor(m => Model.Premium, new { @class = "form-control number" })
                            @Html.ValidationMessageFor(model => model.Premium, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => Model.Rate, new { @class = "col-xs-3 control-label" })
                        <div class="col-xs-8 detail-value">
                            @Html.TextBoxFor(m => Model.Rate, new { @class = "form-control number" })
                            @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-bottom-action">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-success">
                            Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>