@model IMS.WebMvc.Models.PolicyDetailModel

<div class="modal fade" id="add-endorsement-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Endorsement</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" action='@Url.Action("CreateEndorsement")' method="post">
                    <div class="form-group">
                        @Html.LabelFor(m => Model.Endt.EndorsementNumber, new { @class = "col-xs-4 control-label" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(m => Model.Endt.EndorsementNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => Model.Endt.EndorsementNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => Model.Endt.IssueDate, new { @class = "col-xs-4 control-label " })
                        <div class="col-xs-8">
                            <input name="Endt.IssueDate" type="text" class="form-control datepicker datepicker-dropdown"
                                data-val="true" value='@Model.Endt.IssueDate.ToString("MM/dd/yyyy")'
                                data-val-required="Issue Date required" required />
                            @Html.ValidationMessageFor(m => Model.Endt.IssueDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => Model.Endt.EffectiveDate, new { @class = "col-xs-4 control-label " })
                        <div class="col-xs-8">
                            <input name="Endt.EffectiveDate" type="text" class="form-control datepicker datepicker-dropdown"
                                   data-val="true" value='@Model.Endt.EffectiveDate.ToString("MM/dd/yyyy")'
                                   data-val-required="Effective Date required" required />
                            @Html.ValidationMessageFor(m => Model.Endt.EffectiveDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => Model.Endt.Mortgagee, new { @class = "col-xs-4 control-label" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(m => Model.Endt.Mortgagee, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => Model.Endt.Mortgagee, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => Model.Endt.Remarks, new { @class = "col-xs-4 control-label" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(m => Model.Endt.Remarks, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => Model.Endt.Remarks, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-offset-1 col-xs-3">
                            <div class="form-group control-label">
                                <input type="radio" name="Endt.IsRet" ng-value="false" ng-model="newEndt.IsRet"
                                        ng-change="amountChanged()" checked required> ADD
                                <input type="radio" name="Endt.IsRet" ng-value="true" ng-model="newEndt.IsRet"
                                        ng-change="amountChanged()"> RETURN
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Endt.EndorsementAmount, new { @class = "col-xs-3 control-label" })
                            <div class="col-xs-4">
                                @Html.TextBoxFor(m => Model.Endt.EndorsementAmount, new
                           {
                               @class = "form-control",
                               ng_model = "newEndt.EndorsementAmount",
                               ng_change = "amountChanged()"
                           })
                                @Html.ValidationMessageFor(m => Model.Endt.EndorsementAmount, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Endt.Mt, new { @class = "col-xs-3 control-label" })
                            <div class="col-xs-9">
                                @Html.TextBoxFor(m => Model.Endt.Mt, new
                       {
                           @class = "form-control",
                           ng_model = "newEndt.Mt",
                           ng_change = "amountChanged()"
                       })
                                @Html.ValidationMessageFor(m => Model.Endt.Mt, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Endt.Pt, new { @class = "col-xs-3 control-label" })
                            <div class="col-xs-9">
                                @Html.TextBoxFor(m => Model.Endt.Pt, new
                       {
                           @class = "form-control",
                           ng_model = "newEndt.Pt",
                           ng_change = "amountChanged()"
                       })
                                @Html.ValidationMessageFor(m => Model.Endt.Pt, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Endt.Dst, new { @class = "col-xs-3 control-label" })
                            <div class="col-xs-9">
                                @Html.TextBoxFor(m => Model.Endt.Dst, new
                       {
                           @class = "form-control",
                           ng_model = "newEndt.Dst",
                           ng_change = "amountChanged()"
                       })
                                @Html.ValidationMessageFor(m => Model.Endt.Dst, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Endt.Fst, new { @class = "col-xs-3 control-label" })
                            <div class="col-xs-9">
                                @Html.TextBoxFor(m => Model.Endt.Fst, new
                       {
                           @class = "form-control",
                           ng_model = "newEndt.Fst",
                           ng_change = "amountChanged()"
                       })
                                @Html.ValidationMessageFor(m => Model.Endt.Fst, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Endt.Vat, new { @class = "col-xs-3 control-label" })
                            <div class="col-xs-9">
                                @Html.TextBoxFor(m => Model.Endt.Vat, new
                       {
                           @class = "form-control",
                           ng_model = "newEndt.Vat",
                           ng_change = "amountChanged()"
                       })
                                @Html.ValidationMessageFor(m => Model.Endt.Vat, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.Endt.TotalEndorsementAmount, new { @class = "col-xs-3 control-label " })
                            <div class="col-xs-9">
                                <input name="Endt.TotalEndorsementAmount" type="number" class="form-control"
                                       ng-model="newEndt.TotalEndorsementAmount" readonly />
                                @Html.ValidationMessageFor(m => Model.Endt.TotalEndorsementAmount, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>  
                    <input type="hidden" name="Endt.PolicyId" value="@Model.Endt.PolicyId"/>
                    <div class="form-bottom-action">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Ok</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

