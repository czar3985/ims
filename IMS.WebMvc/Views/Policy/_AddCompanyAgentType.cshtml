<div class="modal fade" id="add-company-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Company</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" name="formInsuranceProvider" ng-submit="submitInsuranceProvider(formInsuranceProvider)">
                    <div class="form-group">
                        <label for="company-create" class="col-md-3 control-label">Company Name:</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" id="company-create" name="Name" 
                                   placeholder="Name of the policy's insurance provider" ng-model="insuranceProviderVm.Name" required>
                        </div>
                    </div>
                    <div class="form-bottom-action">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Ok</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

