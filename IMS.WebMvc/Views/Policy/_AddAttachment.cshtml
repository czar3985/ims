@model IMS.WebMvc.Models.PolicyDetailModel

<div id="add-attachment-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Upload New Attachment</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" method="post" action='@Url.Action("CreateAttachment", "Policy")' new { enctype="multipart/form-data" }>
                    <div>
                        @Html.HiddenFor(p => p.Id)
                        <div class="form-group">
                            @Html.LabelFor(m => Model.NewAttachment.FileName, htmlAttributes: new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                <input type="file" name="fileUpload" class="form-control" />
                                @Html.ValidationMessageFor(m => Model.NewAttachment.FileName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => Model.NewAttachment.Remarks, htmlAttributes: new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextAreaFor(m => Model.NewAttachment.Remarks, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => Model.NewAttachment.Remarks, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-bottom-action">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">OK</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

