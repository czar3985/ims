@model IMS.WebMvc.Models.FormViewModel

<div id="email-form-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-disabled="{{sendWait}}">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
                <h4 class="modal-title">Email Form</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div>
                        <div class="form-group">
                            <label for="email-to" class="control-label col-sm-4">To</label>
                            <div class="col-sm-8">
                                <select id="email-to" name="ClientId" class="form-control" ng-model="formEmail.ClientId" ng-disabled="sendModal.sendWait" required>
                                    @foreach (var item in Model.Clients)
                                    {
                                        <option value="@item.Id" class="form-control">@item.ClientName</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="other-email" class="control-label col-sm-4">Other Email</label>
                            <div class="col-sm-8">
                                <input id="other-email" type="email" ng-model="formEmail.OtherEmail" class="form-control" ng-disabled="sendModal.sendWait" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="subject" class="control-label col-sm-4">Subject</label>
                            <div class="col-sm-8">
                                <input id="subject" type="text" ng-model="formEmail.Subject" class="form-control" ng-disabled="sendModal.sendWait" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="body" class="control-label col-sm-4">Body</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" ng-model="formEmail.Body" ng-disabled="sendModal.sendWait"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="body" class="control-label col-sm-4">Attachment</label>
                            <div class="col-sm-8">
                                <a href="formEmail.FileUrl" target="_blank" download>
                                    {{formEmail.FileName}}
                                </a>
                            </div>
                        </div>

                    </div>
                    <div class="form-bottom-action">
                        <button type="button" class="btn btn-default" data-dismiss="modal" ng-disabled="sendModal.sendWait">Cancel</button>
                        <button type="button" class="btn btn-primary" ng-click="confirmEmail()" ng-disabled="sendModal.sendWait">
                            Send<i class="fa fa-spin fa-spinner" ng-show="sendModal.sendWait"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>