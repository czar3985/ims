@model IMS.WebMvc.Models.ReportIndexModel

<button type="button" class="btn btn-default" id="dowload-button" aria-label="Download" 
        ng-click="download('fire-register-page1')">
    <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>
</button>

<ul class="nav nav-pills">
    <li class="active" ng-click="tabClick('fire-register-page1')">
        <a data-toggle="pill" href="#fire-register-page1">Page 1</a>
    </li>
    <li ng-click="tabClick('fire-register-page2')">
