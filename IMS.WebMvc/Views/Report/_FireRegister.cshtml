                    <th>@Html.DisplayNameFor(m => Model.InvoiceByMonthList[0].ReportList[0].TaxComponents.Dst)</th>
                    <th>@Html.DisplayNameFor(m => Model.InvoiceByMonthList[0].ReportList[0].TaxComponents.Vat)</th>
