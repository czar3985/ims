@model IMS.WebMvc.Models.ClientsListModel

<div class="modal fade" id="editClientModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Client</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" action="{{getEditActionUrl()}}" method="post">
                    @*<div class="form-group">
                        @Html.LabelFor(model => model.AccountNumber, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => Model.AccountNumber, new { @class = "form-control", ng_model = "editItem.AccountNumber"})
                            @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>*@
                    <div class="form-group">
                        <label class="col-md-4 control-label">The insured is an:</label>
                        <div class="col-md-8">
                            <label>
                                <input type="radio" name="IsOrganization" value="false" ng-model="editItem.IsOrganization"
                                       ng-value="false">
                                Individual
                            </label>
                            <br />
                            <label>
                                <input type="radio" name="IsOrganization" value="true" ng-model="editItem.IsOrganization"
                                       ng-value="true">
                                Organization or company
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => Model.LastName, new
                       {
                           @class = "form-control",
                           ng_model = "editItem.LastName",
                           ng_required = "editItem.IsOrganization == false"
                       })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger", ng_if = "editItem.IsOrganization == false" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => Model.FirstName, new
                       {
                           @class = "form-control",
                           ng_model = "editItem.FirstName",
                           ng_required = "editItem.IsOrganization == false"
                       })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger", ng_if = "editItem.IsOrganization == false" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.OrganizationName, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => Model.OrganizationName, new
                       {
                           @class = "form-control",
                           ng_model = "editItem.OrganizationName",
                           placeholder = "Required if insured is a company",
                           ng_required = "editItem.IsOrganization == true"
                       })
                            @Html.ValidationMessageFor(model => model.OrganizationName, "", new { @class = "text-danger", ng_if = "editItem.IsOrganization == true" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => Model.Address, new { @class = "form-control", ng_model = "editItem.Address", placeholder = "Mailing Address" })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ContactNumber, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => Model.ContactNumber, new { @class = "form-control", ng_model = "editItem.ContactNumber"})
                            @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => Model.Email, new { @class = "form-control", ng_model = "editItem.Email"})
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Remarks" class="col-md-4 control-label">Remarks:</label>
                        <div class="col-md-8">
                            <textarea id="Remarks" name="Remarks" class="form-control" rows="5" ng-model="editItem.Remarks"></textarea>
                        </div>
                    </div>
                    @*@if (User.IsInRole("Admin"))
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.Rebate, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => Model.Rebate, new { @class = "form-control", ng_model = "editItem.Rebate"})
                                @Html.ValidationMessageFor(model => model.Rebate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    }*@
                    <input type="hidden" id="ReturnUrl" name="ReturnUrl" value="{{editItem.ReturnUrl}}" />
                    <div class="form-bottom-action">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Ok</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
