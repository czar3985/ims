@model IMS.WebMvc.Models.ClientDetailModel

<div id="add-offer-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Upload New Offer</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" method="post" action='@Url.Action("Create", "Offer")' new { enctype="multipart/form-data" }>
                    <div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.NewOffer.DocumentName, htmlAttributes: new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => Model.NewOffer.DocumentName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => Model.NewOffer.DocumentName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.NewOffer.FileName, htmlAttributes: new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                <input type="file" name="fileUpload" class="form-control" data-val="true" data-val-required="File field is required" required />
                                @Html.ValidationMessageFor(m => Model.NewOffer.FileName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.NewOffer.StatusId, htmlAttributes: new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                <select name="NewOffer.StatusId" class="form-control">
                                    @foreach (var item in Model.OfferStatuses)
                                    {
                                        <option value="@item.Id" class="form-control">@item.Name</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(m => Model.NewOffer.StatusId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.NewOffer.Remarks, htmlAttributes: new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextAreaFor(m => Model.NewOffer.Remarks, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => Model.NewOffer.Remarks, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-bottom-action">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">OK</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

